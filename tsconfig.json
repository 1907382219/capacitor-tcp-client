{
  "compilerOptions": {
    "target": "es2017",
    "module": "es2020",
    "moduleResolution": "node",
    "declaration": true,
    "sourceMap": true,
    "strict": true,
    "outDir": "./dist/esm",
    "lib": ["dom", "es2017"],
    "skipLibCheck": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "declarationMap": true
  },
  "include": ["src"],
  "exclude": ["node_modules"]
} 